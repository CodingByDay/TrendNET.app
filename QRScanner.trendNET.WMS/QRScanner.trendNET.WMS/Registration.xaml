<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRScanner.trendNET.WMS.Registration">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackLayout Grid.Row="0">
                    <Label Text="DeviceID: " TextDecorations="Underline"  />
                   
                </StackLayout>
                <StackLayout Grid.Row="1">
                    <Label Text="Streznik: " TextDecorations="Underline"  />
                </StackLayout>
                <StackLayout Grid.Row="2">
                    <Entry Placeholder="Password" IsPassword="True" FontSize="16" x:Name="Password"/>
                </StackLayout>
                <StackLayout Grid.Row="3">
                    <Button Text="Prijava"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    Clicked="BtnRegistration" />

                </StackLayout>
                

            </Grid>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>